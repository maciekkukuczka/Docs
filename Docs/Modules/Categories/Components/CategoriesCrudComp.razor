<MudItem xs="12">
    @* <PageHeaderComp Name="Tematy"/> *@
    <MudPaper Outlined="true" Class="pa-5 ">
        <EditForm Model="@category" OnValidSubmit="Submit">
            <DataAnnotationsValidator/>
            <MudTextField @bind-Value="category.Name" Label="Tytuł" For="@(() => category.Name)"/>
            <MudTextField @bind-Value="category.Description" Label="Opis" For="@(() => category.Name)" Lines="2"/>
            <SubmitButton Colored="true" Small="false" Text="Zapisz Kategorię" Class="d-flex mt-3 ml-auto" />
            </EditForm>
    </MudPaper>
</MudItem>

<MudItem xs="12">
    <MudPaper Outlined="true" Class="pa-5">
        @if (categories is null || !categories.Any())
        {
            <NoDataComp/>
        }
        else
        {
            <MudDataGrid @ref="grid" Items="categories">
                <Columns>
                    <PropertyColumn Property="x => x.Name" Title="Tytuł"/>
                    <TemplateColumn Title="Dokumenty">
                        <CellTemplate>
                            @{
                                string docs = String.Empty;
                                foreach (var doc in context.Item.Docs)
                                {
                                    docs = string.Join(", ", doc.Title);
                                    @* <span @key="doc.Id">@doc.Title</span> *@
                                }
                            }
                            <span>@docs</span>
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn CellClass="d-flex justify-end">
                        <CellTemplate>
                            <MudStack Row="true">
                                <EditButton Small="true" OnClick="()=>Edit(context.Item)"/>
                                <DeleteButton Small="true" OnClick="async ()=>Delete(context.Item)"/>
                            </MudStack>
                        </CellTemplate>
                    </TemplateColumn>

                </Columns>
            </MudDataGrid>
        }
    </MudPaper >
</MudItem >


@code {
    [CascadingParameter] public Task<AuthenticationState>? AuthStateTask { get; set; }

    PersistingComponentStateSubscription stateSubscription;

    // HashSet<Subject> subjects = [];
    HashSet<CategoryVM> categories = [];

    // Subject subject = new();
    CategoryVM category = new();
    string? currentUserId;
    string? currentUserName;

    bool isToEdit = false;

    // MudDataGrid<Subject> grid;
    MudDataGrid<CategoryVM>? grid;


    protected override async Task OnInitializedAsync()
    {
        if (AuthStateTask != null)
        {
            var isAuthenticated = (await AuthStateTask).User.Identity?.IsAuthenticated;
            currentUserName = isAuthenticated != null && isAuthenticated.Value ? (await AuthStateTask).User.Identity?.Name : string.Empty;
        }

        if (!string.IsNullOrWhiteSpace(currentUserName))
            currentUserId = (await UserManager.FindByNameAsync(currentUserName))?.Id;


        stateSubscription = PersistentComponentState.RegisterOnPersisting(() =>
        {
            PersistentComponentState.PersistAsJson("Subjects", categories);
            return Task.CompletedTask;
        });

        await GetSubjects();
    }

    private async Task GetSubjects()
    {
        // subjects = PersistentComponentState.TryTakeFromJson<HashSet<Subject>>
        categories = (PersistentComponentState.TryTakeFromJson<HashSet<CategoryVM>>
            ("Subjects", out var restored)
            ? restored
            // : (await GenericService.GetAll()).data;
            : (await CategoriesService?.GetCategories(currentUserName)).Data);

