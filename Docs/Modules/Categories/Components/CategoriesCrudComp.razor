    async Task Submit(EditContext context)
    {
        // var contextSubject = (Subject)context.Model;
        var contextModel = (CategoryVM)context.Model;
        // contextModel.UserId = currentUserId;
        // var result = isToEdit ? await SubjectService.UpdateSubject(contextSubject) : await GenericService.Add(contextSubject);
        var result = isToEdit ? await CategoriesService?.UpdateCategory(contextModel)! : await CategoriesService?.AddCategory(contextModel)!;


        if (result.Success) categories = (await CategoriesService?.GetCategories(currentUserName)).Data!;
        Snackbar.Add(result.Message, result.Success ? Severity.Success : Severity.Error);

        isToEdit = false;
        category = new();
    }


    // async Task Edit(Subject? contextSubject)
    void Edit(CategoryVM? contextSubject)
    {
        isToEdit = true;
        if (contextSubject is not null) category = contextSubject;
    }


    // async Task Delete(Subject? contextSubject)
    async Task Delete(CategoryVM? contextSubject)
    {
        var result = (await CategoriesService?.DeleteCategory(contextSubject?.Id)!);
        Snackbar.Add(result.Message, result.Success ? Severity.Success : Severity.Error);
        await GetSubjects();
    }

    public void Dispose() => stateSubscription.Dispose();
}